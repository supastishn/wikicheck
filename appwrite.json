{
    "projectId": "wikicheck",
    "functions": [
        {
            "$id": "llm-search",
            "name": "llm-search",
            "runtime": "node-22",
            "specification": "s-0.5vcpu-512mb",
            "execute": [
                "any"
            ],
            "events": [],
            "scopes": [
                "users.read",
                "databases.write"
            ],
            "schedule": "",
            "timeout": 15,
            "enabled": true,
            "logging": true,
            "entrypoint": "src/main.js",
            "commands": "npm install",
            "path": "functions/llm-search"
        }
    ],
    "databases": [
        {
            "$id": "factchecks",
            "name": "factchecks",
            "enabled": true
        }
    ],
    "collections": [
        {
            "$id": "checks",
            "$permissions": [
                "create(\"users\")",
                "read(\"users\")"
            ],
            "databaseId": "factchecks",
            "name": "checks",
            "enabled": true,
            "documentSecurity": true,
            "attributes": [
                {
                    "key": "statement",
                    "type": "string",
                    "size": 1024,
                    "required": true
                },
                {
                    "key": "user_id",
                    "type": "string",
                    "size": 36,
                    "required": true
                },
                {
                    "key": "status",
                    "type": "string",
                    "size": 64,
                    "required": true
                },
                {
                    "key": "explanation",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "sources",
                    "type": "text",
                    "required": false
                },
                {
                    "key": "color",
                    "type": "string",
                    "size": 24,
                    "required": true
                }
            ],
            "indexes": []
        }
    ]
}
